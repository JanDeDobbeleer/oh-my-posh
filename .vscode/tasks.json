{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "cwd": "${workspaceRoot}",
  "echoCommand": true,
  "type": "shell",
  "tasks": [
    {
      "type": "shell",
      "command": "go",
      "label": "build omp",
      "options": { "cwd": "${workspaceRoot}/src" },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$go",
      "args": ["build", "-v", "-o", "bin/oh-my-posh"]
    }
  ]
}
