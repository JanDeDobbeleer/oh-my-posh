{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "os",
          "style": "powerline",
          "foreground": "#f8f8f2",
          "background": "#8B00FF",
          "template": " {{.Icon}} "
        },
        {
          "type": "path",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "#f8f8f2",
          "background": "#A020F0",
          "template": " {{ .Path }} ",
          "properties": {
            "style": "folder"
          }
        },
        {
          "type": "git",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "#f8f8f2",
          "background": "#9370DB",
          "template": " \ue725 {{ .HEAD }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
          "properties": {
            "branch_icon": "",
            "fetch_stash_count": true,
            "fetch_status": false,
            "fetch_upstream_icon": true
          }
        }
      ]
    },
    {
      "type": "rprompt",
      "alignment": "left",
      "segments": [
        {
          "type": "node",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "#333333",
          "background": "#A3CC8B",
          "template": "  {{ .Full }} ",
          "fetch_version": true
        },
        {
          "type": "npm",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "#333333",
          "background": "#B8E69C",
          "template": "  {{ .Full }} ",
          "fetch_version": true
        },
        {
          "type": "shell",
          "style": "diamond",
          "background": "#A9D0E6",
          "foreground": "#333333",
          "template": " {{ .Name }} "
        }
      ]
    }
  ],
  "final_space": true,
  "version": 2
}
