{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "#F5F5F5",
          "properties": {
            "prefix": "",
            "text": "\uFB26"
          }
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "#B80101",
          "properties": {
            "style": "agnoster"
          }
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "#B80101",
          "properties": {
            "prefix": " <#F5F5F5>git:</>",
            "template": "{{ .HEAD }}"
          }
        }
      ]
    }
  ]
}
