{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
        {
            "alignment": "left",
            "segments": [
                {
                    "background": "#91DDFF",
                    "foreground": "#000000",
                    "leading_diamond": "<transparent,background>\ue0b0</>",
                    "style": "diamond",
                    "template": " \uf26c  {{ title .HostName }} ",
                    "trailing_diamond": "\ue0b0",
                    "type": "session"
                },
                {
                    "background": "#4ecaff",
                    "foreground": "#000000",
                    "leading_diamond": "<transparent,background>\ue0b0</>",
                    "style": "diamond",
                    "template": " \uf2bd  {{ title .UserName }} ",
                    "trailing_diamond": "\ue0b0",
                    "type": "session"
                },
                {
                    "background": "#00B3FF",
                    "foreground": "#000000",
                    "leading_diamond": "<transparent,background>\ue0b0</>",
                    "powerline_symbol": "\ue0b0",
                    "properties": {
                        "style": "folder"
                    },
                    "style": "diamond",
                    "template": " \uea83 {{ .Path }} ",
                    "trailing_diamond": "\ue0b0",
                    "type": "path"
                },
                {
                    "background": "#00B3FF",
                    "background_templates": [
                        "{{ if or (.Working.Changed) (.Staging.Changed) }}#f77622{{ end }}",
                        "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#e43b44{{ end }}",
                        "{{ if gt .Ahead 0 }}#2ce8f5{{ end }}",
                        "{{ if gt .Behind 0 }}#f77622{{ end }}"
                    ],
                    "foreground": "#000000",
                    "powerline_symbol": "\ue0b0",
                    "properties": {
                        "branch_icon": " \ue725 ",
                        "fetch_stash_count": true,
                        "fetch_status": true,
                        "fetch_upstream_icon": true
                    },
                    "style": "powerline",
                    "template": " {{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
                    "type": "git"
                }
            ],
            "type": "prompt"
        },
        {
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "background": "#00B3FF",
                    "background_templates": [
                        "{{ if gt .Code 0 }}#ff0044{{ end }}"
                    ],
                    "foreground": "#000000",
                    "leading_diamond": "<transparent,background>\ue0b0</>",
                    "properties": {
                        "always_enabled": true
                    },
                    "style": "diamond",
                    "template": " \uf0e7 ",
                    "trailing_diamond": "\ue0b0",
                    "type": "status"
                }
            ],
            "type": "prompt"
        }
    ],
    "final_space": true,
    "version": 2
}