{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "background": "#ffff00",
          "foreground": "#000000",
          "leading_diamond": "\u256d\u2500\ue0b2",
          "powerline_symbol": "\ue0b0",
          "style": "diamond",
          "template": " {{.Icon}} ",
          "type": "os"
        },
        {
          "background": "#ffff00",
          "foreground": "#000000",
          "style": "diamond",
          "template": "{{.Name}} ",
          "type": "shell"
        },
        {
          "background": "#ff0077",
          "foreground": "#000000",
          "properties": {
            "charged_icon": " \ueb2d ",
            "charging_icon": " \uf492 ",
            "discharging_icon": " \uf242 "
          },
          "style": "diamond",
          "template": "{{ if not .Error }}{{ .Icon }}{{ .Percentage }}{{ end }}{{ .Error }}% ",
          "type": "battery"
        },
        {
          "background": "#0000ff",
          "foreground": "#ffffff",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "style": "agnoster_short",
            "folder_separator_icon": "\\",
            "hide_root_location": false,
            "max_depth": 1
          },
          "style": "powerline",
          "template": " <#ffff00>\ue5fe</> {{ .Path }} ",
          "type": "path"
        },
        {
          "background": "#00ff00",
          "foreground": "#000000",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#ffbe0b{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#f26d50{{ end }}",
            "{{ if gt .Ahead 0 }}#89d1dc{{ end }}",
            "{{ if gt .Behind 0 }}#f17c37{{ end }}"
          ],
          "properties": {
            "branch_icon": "\uf418 ",
            "branch_max_length": 25,
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true,
            "github_icon": "\uf408 ",
            "git_icon": "\uf02a2"
          },
          "template": " {{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
          "trailing_diamond": "\ue0b4",
          "type": "git"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#ffff00",
          "style": "plain",
          "template": "\u2570\u2500\ue602 ",
          "type": "text"
        },
        {
          "foreground": "#00ff00",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "display_mode": "always",
            "display_default": true
          },
          "style": "plain",
          "template": "(<#ffff00>\ue235</> {{ if .Error }}{{ .Error }}{{ else }}{{ if .Venv }}{{ .Venv }}{{ else }}global{{ end }}<#ff0000>\uf004</> {{ .Full }}{{ end }}) ",
          "type": "python"
        }
      ],
      "type": "prompt"
    }
  ],
  "console_title_template": "{{.UserName}}@{{.HostName}}",
  "final_space": false,
  "version": 2
}