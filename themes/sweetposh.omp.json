{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "background": "#91ddff",
          "foreground": "#100e23",
          "leading_diamond": "\ue0b6",
          "style": "powerline",
          "template": " {{ .Icon }} ",
          "trailing_diamond": "\ue0b0",
          "powerline_symbol": "\ue0b0",
          "type": "os"
        },
        {
          "background": "#ffffff",
        "foreground": "#100e23",
        "powerline_symbol": "\ue0b0",
        "style": "powerline",
        "template": " {{ .UserName }}@{{ .HostName }} ",
        "type": "session"
        },
        {
          "background": "#91ddff",
          "foreground": "#100e23",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "folder_icon": "\uf115",
            "folder_separator_icon": " \ue0b1 ",
            "home_icon": "\uf7db",
            "style": "agnoster"
          },
          "style": "diamond",
          "template": " {{ .Path }} ",
          "trailing_diamond": "\ue0b0",
          "type": "path"
        },
        {
          "background": "#95ffa4",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#7621DE{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#7621DE{{ end }}",
            "{{ if gt .Ahead 0 }}#7621DE{{ end }}",
            "{{ if gt .Behind 0 }}#7621DE{{ end }}"
          ],
          "foreground": "#100e23",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "style": "powerline",
          "template": " {{ .UpstreamIcon }}{{ .HEAD }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if gt .StashCount 0 }} \uf692 {{ .StashCount }}{{ end }} ",
          "type": "git"
        },
        {
          "background": "#95ffa4",
          "foreground": "#100e23",
          "leading_diamond": "<transparent,#95ffa4>\ue0b0</>",
          "properties": {
            "time_format": "15:04:05"
          },
          "style": "diamond",
          "template": " {{ .CurrentDate | date .Format }} ",
          "trailing_diamond": "\ue0b0",
          "type": "time"
        },
        {
          "background": "#91ddff",
          "foreground": "#0C212F",
          "leading_diamond": "<transparent,#91ddff>\ue0b0</>",
          "properties": {
            "style": "dallas",
            "threshold": 0
          },
          "style": "diamond",
          "template": " {{ .FormattedMs }}s ",
          "trailing_diamond": "\ue0b0",
          "type": "executiontime"
        },
        {
          "background": "#910000",
          "foreground": "#ffffff",
          "leading_diamond": "<transparent,background>\ue0b0</>",
          "style": "diamond",
          "template": "<transparent> \uf12a</> {{ .Meaning }} ",
          "trailing_diamond": "\ue0b0",
          "type": "exit"
        }
      ],
      "type": "prompt"
    }
  ],
  "console_title_template": "{{if .Root}} \u26a1 {{end}}{{.Folder | replace \"~\" \"üè†\"}} @ {{.HostName}}",
  "final_space": true,
  "version": 2
}
