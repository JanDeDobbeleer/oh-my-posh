{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "#CECE04",
          "style": "plain",
          "template": "# ",
          "type": "root"
        },
        {
          "style": "plain",
          "template": "{{ .UserName }}@{{ .HostName }} ",
          "type": "session"
        },
        {
          "foreground": "#7B68EE",
          "properties": {
            "style": "agnoster_short"
          },
          "style": "plain",
          "template": "{{ .Path }} ",
          "type": "path"
        },
        {
          "foreground": "#48D1CC",
          "properties": {
            "branch_icon": "",
            "fetch_upstream_icon": false
          },
          "style": "plain",
          "template": "HEAD:{{ .UpstreamIcon }}{{ .HEAD }} ",
          "type": "git"
        },
        {
          "foreground": "#7FFFD4",
          "foreground_templates": [
            "{{ if gt .Code 0 }}#E84855{{ end }}"
          ],
          "properties": {
            "always_enabled": true
          },
          "style": "plain",
          "template": "<#66CDAA>\u276f</><#76EEC6>\u276f</><foreground>\u276f</> ",
          "type": "status"
        }
      ],
      "type": "prompt"
    }
  ],
  "version": 2
}
